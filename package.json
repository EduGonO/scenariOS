{
  "name": "mcp-server-template",
  "version": "0.0.1",
  "private": true,
  "description": "scenariOS MCP + web app",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "rm -rf dist && next build && tsc -p tsconfig.server.json && mv dist/src/* dist && rmdir dist/src",
    "postbuild": "mkdir -p dist && cp -r .next dist/.next",
    "start": "node dist/index.js",
    "dev:mcp": "tsx watch src/index.ts",
    "inspector": "mcp-inspector http://localhost:3000/mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "googleapis": "^159.0.0",
    "marked": "^12.0.2",
    "next": "^14.2.9",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.17.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@modelcontextprotocol/inspector": "^0.16.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/node": "^22.15.30",
    "@types/pdf-parse": "^1.1.5",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "19.1.13",
    "autoprefixer": "^10.4.20",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "postcss": "^8.4.49",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.19.4",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.32.0"
  }
}
